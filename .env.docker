# =============================================================================
# Monstein API - Docker Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your deployment
#
# Usage:
#   cp .env.docker .env
#   # Edit .env with your settings
#   docker-compose up -d
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=production
APP_DEBUG=false

# -----------------------------------------------------------------------------
# Port Configuration
# -----------------------------------------------------------------------------
# Load Balancer port (main entry point)
LB_PORT=80
LB_SSL_PORT=443

# Direct API access (bypasses load balancer)
API_PORT=8080

# Database external port (for development tools)
DB_EXTERNAL_PORT=3306

# Adminer (database admin - development only)
ADMINER_PORT=8081

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_DRIVER=mysql
DB_NAME=monstein
DB_USER=monstein
DB_PASS=your_secure_password_here
DB_ROOT_PASS=your_root_password_here
DB_CHARSET=utf8mb4

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure secret for production!
# Example: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES=30
JWT_ALGORITHM=HS256

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Set to your frontend domain(s) in production
# Example: https://app.example.com
CORS_ORIGIN=*

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60
