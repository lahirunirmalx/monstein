{
    "name": "lahirunirmalx/monstein",
    "description": "A lightweight RESTful API framework built on Slim with JWT authentication and Eloquent ORM",
    "type": "project",
    "license": "MIT",
    "keywords": ["api", "rest", "slim", "jwt", "eloquent", "php"],
    "authors": [
        {
            "name": "Lahiru",
            "email": "lahirunirmalx@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "slim/slim": "^3.12",
        "slim/psr7": "^1.6",
        "illuminate/database": "^8.0 || ^9.0 || ^10.0",
        "illuminate/events": "^8.0 || ^9.0 || ^10.0",
        "monolog/monolog": "^2.0 || ^3.0",
        "awurth/slim-validation": "^3.0",
        "robmorgan/phinx": "^0.13 || ^0.14",
        "tuupola/slim-jwt-auth": "^3.6",
        "firebase/php-jwt": "^5.5",
        "symfony/yaml": "^5.0 || ^6.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0"
    },
    "autoload": {
        "psr-4": {
            "Monstein\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Monstein\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "migrate": "phinx migrate",
        "migrate:rollback": "phinx rollback",
        "seed": "phinx seed:run",
        "make:resource": "php bin/monstein make:resource",
        "make:entity": "php bin/monstein make:entity",
        "make:controller": "php bin/monstein make:controller",
        "make:migration": "php bin/monstein make:migration"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
