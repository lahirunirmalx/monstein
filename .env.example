# Monstein API Configuration
# Copy this file to .env and update the values

# Application Settings
APP_ENV=development
APP_DEBUG=true

# Database Configuration
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=monstein
DB_USER=your_username
DB_PASS=your_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# JWT Authentication
# IMPORTANT: Change this to a strong, unique secret in production!
# Generate with: php -r "echo bin2hex(random_bytes(32));"
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES=30
JWT_ALGORITHM=HS256

# CORS Configuration
# Use specific origins in production (e.g., https://yourapp.com)
CORS_ORIGIN=*
CORS_HEADERS=X-Requested-With, Content-Type, Accept, Origin, Authorization
CORS_METHODS=GET, POST, PUT, DELETE, PATCH, OPTIONS

# Logging
LOG_PATH=logs/app.log
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# Trusted Proxies (for load balancer IP detection)
TRUSTED_PROXIES=127.0.0.1

# File Uploads
FILE_STORAGE_PATH=storage/uploads
FILE_BASE_URL=http://localhost:8080

# Usage Tracking
USAGE_TRACKER_ENABLED=true
USAGE_TRACKER_DRIVER=database
USAGE_TRACKER_SAMPLE_RATE=100
